<package type="addon" name="nuxeo-api-playground" version="@VERSION@">
  <title>Nuxeo API Playground</title>
  <description>
    <p>The Nuxeo API Playground addon provides a way to run Nuxeo HTTP API queries against any live repository to understand all the available options of the Nuxeo REST API. This package allows you to deploy your own setup on the site available at http://nuxeo.github.io/api-playground/.</p>
  </description>
  <home-page>https://doc.nuxeo.com/nxdoc/howto-nuxeo-api-playground/</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>true</supported>
  <platforms>
    <platform>@DISTRIBUTION_NAME@-@NUXEO_TARGET_VERSION@</platform>
  </platforms>
  <license>Apache License, Version 2.0</license>
  <license-url>http://www.apache.org/licenses/LICENSE-2.0</license-url>
  <visibility>PUBLIC</visibility>
</package>
